@inject AppState AppState

@if (AppState.FavoriteTrailsState.IsFavoriteTrail(Trail))
{
    <button class="btn btn-outline-primary ml-1" title="Favorite" @onclick="@(() => AppState.FavoriteTrailsState.RemoveFavoriteTrail(Trail))">
        <i class="bi bi-heart-fill"></i>
    </button>
}
else
{
    <button class="btn btn-outline-primary ml-1" title="Favorite" @onclick="@(() => AppState.FavoriteTrailsState.AddFavoriteTrail(Trail))">
        <i class="bi bi-heart"></i>
    </button>
}

@code {
    [Parameter, EditorRequired] public Trail Trail { get; set; } = default!;
}
